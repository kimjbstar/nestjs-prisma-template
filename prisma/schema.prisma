generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "rhel-openssl-1.0.x", "darwin"]
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator prismaClassGenerator {
  provider   = "prisma-class-generator"
  dryRun     = "false"
  useGraphQL = "true"
}

enum UserRole {
  NORMAL
  ADMIN
  SUPER_ADMIN
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @db.VarChar(128)
  name          String    @db.VarChar(128)
  password      String    @db.VarChar(256)
  salt          String    @db.VarChar(256)
  role          UserRole
  addressRoad   String?   @db.VarChar(256)
  addressDetail String?   @db.VarChar(256)
  age           Int?
  lastLoginedAt DateTime? @db.DateTime(6)
  extra         Json?
  createdAt     DateTime  @default(now()) @db.DateTime(6)
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? @db.DateTime(6)
}

enum CompanyType {
  A
  B
  C
}

model Company {
  id        Int         @id @default(autoincrement())
  name      String      @db.VarChar(128)
  type      CompanyType @default(A)
  createdAt DateTime    @default(now()) @db.DateTime(6)
  updatedAt DateTime    @updatedAt
  deletedAt DateTime?   @db.DateTime(6)
  authors   Author[]
}

model Author {
  id        Int       @id @default(autoincrement())
  company   Company   @relation(fields: [companyId], references: [id])
  name      String    @db.VarChar(128)
  extra     Json?
  createdAt DateTime  @default(now()) @db.DateTime(6)
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? @db.DateTime(6)
  posts     Post[]
  companyId Int
}

model Post {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(128)
  author    Author    @relation(fields: [authorId], references: [id])
  createdAt DateTime  @default(now()) @db.DateTime(6)
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? @db.DateTime(6)
  authorId  Int
}
